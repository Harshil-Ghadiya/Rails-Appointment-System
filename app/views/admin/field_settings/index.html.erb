<div style="display: flex;">
  <%= render 'admin/shared/sidebar' %>
  <div style="margin-left: 270px; padding: 30px; flex: 1;">
    <h3 style="color: #2c3e50;"> Patient Form Settings</h3>
    <p style="color: #7f8c8d;">Select which fields the patient MUST fill during booking.</p>

    <%= form_with url: update_all_admin_field_settings_path, method: :patch, local: true do %>
      <div style="background: white; padding: 25px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.05);">
        <% @settings.each do |setting| %>
          <div style="display: flex; align-items: center; margin-bottom: 20px; border-bottom: 1px solid #f1f1f1; padding-bottom: 10px;">
            <div style="flex-grow: 1;">
              <strong style="font-size: 16px; color: #34495e;"><%= setting.field_name.titleize %></strong>
              <p style="margin: 0; font-size: 12px; color: #95a5a6;">Make this field mandatory for patients</p>
            </div>
            <label class="switch">
              <input type="hidden" name="fields[<%= setting.id %>][is_required]" value="0">
              <input type="checkbox" name="fields[<%= setting.id %>][is_required]" value="1" <%= 'checked' if setting.is_required %> style="width: 25px; height: 25px; cursor: pointer;">
            </label>
          </div>
        <% end %>
        <div style="margin-top: 20px;">
          <%= submit_tag "Save Form field Setting", style: "background: #3498db; color: white; border: none; padding: 12px 30px; border-radius: 5px; cursor: pointer; font-weight: bold; width: 100%;" %>
        </div>
      </div>
    <% end %>
  </div>
</div>