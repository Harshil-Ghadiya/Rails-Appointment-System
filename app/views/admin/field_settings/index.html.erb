<div style="display: flex;">
  <%= render 'admin/shared/sidebar' %>
  <div style="margin-left: 270px; padding: 30px; flex: 1; background: #f4f7f6;">
    <h2 style="color: #2c3e50;">⚙️ Patient Form Settings</h2>
    <p>Check the fields you want to show on patient booking form:</p>

    <%= form_with url: update_all_admin_field_settings_path, method: :patch, local: true do |f| %>
      <div style="background: white; padding: 25px; border-radius: 12px; box-shadow: 0 4px 10px rgba(0,0,0,0.05);">
        
        <% @settings.each do |setting| %>
          <div style="display: flex; justify-content: space-between; align-items: center; padding: 15px 0; border-bottom: 1px solid #eee;">
            <div>
              <strong style="font-size: 16px; color: #34495e;"><%= setting.field_name.titleize %></strong>
              <p style="margin: 0; font-size: 12px; color: #95a5a6;">Show this field to patient</p>
            </div>
            
            <label style="cursor: pointer;">
              <input type="hidden" name="fields[<%= setting.id %>][is_required]" value="0">
              <input type="checkbox" name="fields[<%= setting.id %>][is_required]" value="1" <%= 'checked' if setting.is_required %> style="width: 25px; height: 25px;">
            </label>
          </div>
        <% end %>

        <div style="margin-top: 25px;">
          <%= f.submit "Save Form Changes", style: "background: #3498db; color: white; border: none; padding: 12px 30px; border-radius: 5px; cursor: pointer; font-weight: bold; font-size: 16px;" %>
        </div>
      </div>
    <% end %>
  </div>
</div>