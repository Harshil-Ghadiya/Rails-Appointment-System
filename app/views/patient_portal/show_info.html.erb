<%= turbo_frame_tag "main_content" do %>
<div style="max-width: 500px; margin: 40px auto; font-family: sans-serif; padding: 20px;">
  <div style="background: white; border-radius: 20px; box-shadow: 0 10px 25px rgba(184, 180, 180, 0.1); overflow: hidden; border: 1px solid #eee;">
    
    <%# Header %>
    <div style="background: #4274a6; color: white; padding: 30px 20px; text-align: center;">
      <h2 style="margin: 0; text-transform: uppercase;"><%= @organization.name %></h2>
      <p style="margin: 10px 0 0; opacity: 0.8;">Live Clinic Status</p>
    </div>  

    <div style="padding: 30px;">
      <%# Live Stats Grid %>
      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 30px;">
        <div style="background: #e7eded; padding: 15px; border-radius: 12px; text-align: center;">
          <small style="color: #1565c0; font-weight: bold;">CURRENT TOKEN</small>
          <div style="font-size: 24px; font-weight: bold; color: #0d47a1;"><%= @current_token %></div>
        </div>
        <div style="background: #f1f8e9; padding: 15px; border-radius: 12px; text-align: center;">
          <small style="color: #2e7d32; font-weight: bold;">LAST TOKEN</small>
          <div style="font-size: 24px; font-weight: bold; color: #1b5e20;"><%= @last_token %></div>
        </div>
      </div>

      <%# Doctor Status %>
      <div style="text-align: center; margin-bottom: 30px; padding: 15px; border-radius: 12px; background: #fff3e0;">
         <span style="color: #e65100; font-weight: bold;">üë®‚Äç‚öïÔ∏è DOCTOR STATUS: </span>
         <span style="background: #ff9800; color: white; padding: 4px 12px; border-radius: 20px; font-size: 14px;">
           <%= @organization.doctor_status || "Available" %>
         </span>
      </div>

      <%# Final Booking Button %>
      <%= link_to "CLICK HERE TO BOOK APPOINTMENT", new_appointment_path(id: @organization.id), 
      data: { turbo_frame: "_top" },
          style: "display: block; background: #27ae60; color: white; text-align: center; padding: 18px; border-radius: 10px; text-decoration: none; font-weight: bold; font-size: 18px; box-shadow: 0 4px 15px rgba(39,174,96,0.3);" %>
      
      <p style="text-align: center; font-size: 13px; color: #95a5a6; margin-top: 15px;">
        * Please check the current token before booking to estimate your wait time.
      </p>
    </div>
  </div>
</div>
<% end %>