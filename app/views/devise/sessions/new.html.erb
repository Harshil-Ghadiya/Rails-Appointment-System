<%# Parent container: Content ne vertical ane horizontal banne rite center karva mate %>
<div style="display: flex; justify-content: center; align-items: center; min-height: 100vh; width: 100%; background-color: #f8f9fa; font-family: 'Segoe UI', sans-serif; position: absolute; top: 0; left: 0;">
  
  <%# Mini Card: 300px compact style %>
  <div style="width: 100%; max-width: 320px; background: white; padding: 30px; border-radius: 15px; box-shadow: 0 10px 25px rgba(0,0,0,0.1); border: 1px solid #eaeaea; margin: 15px;">
    
    <div style="text-align: center; margin-bottom: 25px;">
      <h3 style="color: #2c3e50; margin: 0; font-size: 20px; font-weight: 700;">Admin Access</h3>
      <p style="color: #7f8c8d; font-size: 12px; margin-top: 5px;">Sign in to your dashboard</p>
    </div>

    <% content_for :head do %>
      <meta name="turbo-cache-control" content="no-cache">
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo_action: "replace" }) do |f| %>
      
      <%# Email Field %>
      <div style="margin-bottom: 15px;">
        <%= f.label :email, style: "display: block; font-size: 12px; font-weight: 600; color: #555; margin-bottom: 5px;" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, 
            placeholder: "Email address",
            style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; box-sizing: border-box; outline: none; font-size: 13px;" %>
      </div>

      <%# Choice Box - Password or OTP %>
      <div style="background-color: #fcfcfc; border: 1px dashed #ccc; padding: 15px; border-radius: 10px; margin-bottom: 15px;">

        <div style="margin-bottom: 10px;">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password",
              style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; font-size: 13px; box-sizing: border-box;" %>
        </div>

        <div style="text-align: center; margin: 8px 0; color: #bbb; font-size: 10px; font-weight: bold; text-transform: uppercase; letter-spacing: 1px;">— OR OTP —</div>

        <div>
          <%= f.text_field :phone_number, placeholder: "Mobile Number",
              style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; font-size: 13px; box-sizing: border-box;" %>
        </div>
      </div>

      <%# Remember Me %>
      <div style="margin-bottom: 20px;">
        <% if devise_mapping.rememberable? %>
          <label style="display: flex; align-items: center; gap: 8px; font-size: 12px; color: #666; cursor: pointer;">
            <%= f.check_box :remember_me %> Remember me
          </label>
        <% end %>
      </div>

      <%# Submit Button %>
      <div>
        <%= f.submit "Verify & Log in", 
            data: { turbo_submitting: "..." }, 
            style: "width: 100%; background: #2c3e50; color: white; border: none; padding: 12px; border-radius: 8px; font-weight: 600; cursor: pointer; font-size: 14px; transition: 0.3s; box-shadow: 0 4px 6px rgba(0,0,0,0.1);" %>
      </div>
    <% end %>

    <div style="text-align: center; margin-top: 20px; font-size: 12px;">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>